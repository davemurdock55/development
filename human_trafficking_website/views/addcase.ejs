        <form method="post" action="/addcase" style="margin: 0px">
          <div style="overflow-x: scroll" >
            <table>
              <thead>
                <tr>
                  <!-- <th>Case</th> -->
                  <th>Date Missing</th>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Age At Missing</th>
                  <th>City</th>
                  <th>State</th>
                  <th>Gender</th>
                  <th>Race</th>
                </tr>
              </thead>
              <tr>
                <td><label for="date_missing"></label>
                  <input type="date" id="date_missing" name="date_missing" required placeholder="MM/DD/YYYY" style="text-align: center;">
                </td>

                <td><label for="first_name"></label>
                  <input type="text" id="first_name" name="first_name" maxlength="30" required placeholder="First Name">
                </td>

                <td><label for="last_name"></label>
                  <input type="text" id="last_name" name="last_name" maxlength="30" required placeholder="Last Name">
                </td>

                <td><label for="age_at_missing"></label>
                  <input type="number" id="age_at_missing" name="age_at_missing" maxlength="3" min="0" required placeholder="0" style="width: 50px;" size="3">
                </td>

                <td><label for="city"></label>
                  <input type="text" id="city" name="city" maxlength="30" required placeholder="Sacramento">
                </td>

                <td><label for="state"></label>
                  <input type="text" id="state" name="state" maxlength="2" required placeholder="CA" size="3">
                </td>

                <td><label for="gender"></label>
                  <select name="gender" id="gender" required style="text-align: center;">
                    <option value="M">Male</option>
                    <option value="F">Female</option>
                    <option value="O">Other</option>
                  </select>
                </td>

                <td><label for="race"></label>
                  <select name="race" id="race" required>
                    <option value="W">W</option>
                    <option value="M">M</option>
                    <option value="H">H</option>
                  </select>
                </td>
              </tr>
              </tbody>
            </table>
